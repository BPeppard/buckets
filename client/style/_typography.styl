.center
  text-align center

strong, label, .label
  font-weight 500

h2
  color #888
  font-weight 600

h4
  margin-top 14px
  margin-bottom 8px
  font-size 11px
  text-transform uppercase
  color #999
  font-weight 500
  letter-spacing 1px
  font-family $sans

  h3 + &
    margin-top 0

pre.code, textarea.code
  height 500px
  font-size 14px
  font-family Menlo, 'Courier New', monospace
  line-height 16px

textarea.code
  padding 0 2px
  position relative
  top -1px

  &.loading
    opacity .3
