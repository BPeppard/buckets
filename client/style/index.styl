$orange = #d43116

body
  color #555
  font-family 'Avenir Next', Helvetica, sans-serif

a
  color $orange

h1
  color #111
  font-weight 700

  .bkts-icon
    display block

  a
    text-decoration none
    color darken($orange, 10)

h1 .buckets-icon
  position relative
  top .1em
  
.version-badge
  font-size .5em
  border-radius 3px
  border 2px solid #ddd
  padding .1em .4em
  color #aaa
  vertical-align middle
  font-weight 500
  display inline-block
  margin-left .2em

#bkts-content
  font-size 1.2em
  margin 40px 0
  text-align center

#bkts-ftr
  color #888
  text-align center