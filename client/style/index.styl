// Note: Most basic variables are in LESS at bootstrap.less

@import 'nib'

$primary = #87cdc2

$red = #df4949
$blue = #4c8fc4
$orange = #e27a3f
$yellow = #deb342
$teal = #45b29d
$purple = #825a7b

h1

  .bkts-icon
    display block
    position relative
    // top .1em
    vertical-align middle

  a
    color #444

    &:hover
      text-decoration none

strong
  font-weight 500

body
  display table
  width 100%
  display flex
  min-height 100vh
  flex-direction column
  
.version-badge
  font-size 12px
  border-radius 3px
  border 2px solid #ccc
  padding .15em .4em
  margin-bottom 0 0 .4em
  color #999
  vertical-align top
  font-weight 500
  display inline-block
  font-family 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif;

h4
  margin-top 14px
  margin-bottom 8px
  font-size 11px
  text-transform uppercase
  color #999
  font-weight 500
  letter-spacing 1px
  font-family 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif;

  h3 + &
    margin-top 0

#bkts-content
  flex 1

#bkts-ftr
  margin 100px 0 20px
  color #888
  text-align right

  hr
    margin-right 0

  .icon
    font-size 1.2em
    vertical-align middle

.usernav
  text-size 12px
  margin 12px 0

  .pull-left
    vertical-align middle
  .avatar
    transform scale(.7)

.nav-primary
  li.divider
    border-bottom 1px solid lighten($primary, 25)

.avatar
  vertical-align middle
  width 30px
  height 30px
  background-size cover
  border-radius 20px
  display inline-block

#bkts-hdr
  color #555
  padding 5px 0

.form-control:focus
  box-shadow none !important

.btn .icon
  font-size 24px
  vertical-align middle
  line-height .95em

.nav-primary
  > li > a
    padding-left 40px

  .icon
    position absolute
    left 8px
    top 8px
    font-size 24px
    vertical-align middle
    margin-right 4px
    color #888

  .bucket-add
    position absolute
    top 0
    right 0
    padding-left 15px

hr.tiny
  width 5%
  margin 8px auto
  border-bottom 1px solid #eee

pre.code
  height 400px

.swatches
  overflow hidden

.swatches > div
  width 30px
  height 30px
  font-size 24px
  text-align center
  float left
  margin 0 10px 10px 0
  position relative
  cursor pointer

.swatches.icons
  div
    padding 2px
    opacity .5
  .selected
    opacity 1

.swatches.colors
  .selected:after
    display block
    content ''
    position absolute
    top 40%
    left 40%
    background-color #fff
    border-radius 100%
    width 20%
    height 20%

  > .teal
    background-color $teal
  > .blue
    background-color $blue
  > .orange
    background-color $orange
  > .yellow
    background-color $yellow
  > .red
    background-color $red
  > .purple
    background-color $purple

.bucket
  &.color-teal 
    a, .icon
      color $teal
  &.color-blue 
    a, .icon
      color $blue
  &.color-orange 
    a, .icon
      color $orange
  &.color-yellow 
    a, .icon
      color $yellow
  &.color-red 
    a, .icon
      color $red
  &.color-purple 
    a, .icon
      color $purple

.page

  h1
    margin-top 30px
    padding-bottom 10px
    border-bottom 1px solid rgba($primary, .3)

.bkts-wildcard
  border-radius 2px
  background-color rgba($primary, .3)
  padding 0 6px

.center
  text-align center
