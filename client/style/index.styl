$orange = #d43116
@import 'nib'

// Most basic variables are in LESS at bootstrap.less

a
  color $orange

h1

  .bkts-icon
    display block

  a
    color #999

    &:hover
      text-decoration none

body
  display table
  width 100%
  display flex
  min-height 100vh
  flex-direction column

h1 .buckets-icon
  position relative
  // top .1em
  vertical-align middle
  
.version-badge
  font-size 12px
  border-radius 3px
  border 2px solid #ccc
  padding .1em .4em
  margin-bottom 0 0 .4em
  color #aaa
  vertical-align top
  font-weight 600
  display inline-block

#bkts-content
  font-size 1.2em
  text-align center
  flex 1

#bkts-ftr
  margin 100px 0 20px
  color #888
  text-align center

#bkts-hdr
  color #555
  padding 5px 20px

.form-control:focus
  box-shadow none !important



hr.tiny
  width 5%
  margin 5px auto
  border-bottom 2px solid #eee