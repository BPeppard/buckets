// Note: Most basic variables are in LESS at bootstrap.less

@import 'nib'

$primary = #edb91d

$red = #dc2d2e
$blue = #39a0a4
$orange = #e45906
$yellow = #edb91d
$teal = #5aa97f
$purple = #825a7b

$sans = Lato, 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif

body
  background-color #fcfcfc
  display table
  width 100%
  display flex
  min-height 100vh
  flex-direction column

#bkts-content
  flex 1

.avatar
  vertical-align middle
  width 30px
  height 30px
  background-size cover
  border-radius 20px
  display inline-block

#bkts-hdr
  color #555
  padding 5px 0

.form-control
  border-width 2px
  box-shadow none
  // font-size 16px
  padding 10px 12px
.form-control:focus
  box-shadow none !important

.btn-icon
  .icon
    font-size 24px
    vertical-align middle
    line-height inherit

  &:hover
    text-decoration none

  &:active
    position relative
    top 1px

hr.tiny
  width 5%
  margin 8px auto
  border-bottom 1px solid #eee

.page
  h1
    letter-spacing -1px
    margin-top 30px
    padding-bottom 10px
    border-bottom 3px solid rgba($primary, .5)
    color #888

@import '_typography'
@import '_nav'
@import '_footer'
@import '_views'
@import '_toastr'

.tab-pane
  padding-top 20px

.toolbar
  padding 8px
  background-color #f6f6f6
  border-bottom 1px solid #eee
  margin-bottom 4px

h4[data-toggle]
  cursor pointer

  .caret
    transition 200ms ease-out

  &.collapsed .caret
    transform rotate(-90deg)

.tooltip
  font-weight 500
  font-family $sans
  color #222

.tooltip-inner
  background-color rgba($primary, .8)

p.intro
  font-size 18px
  color #666

.userFields textarea.form-control
  height 320px
  font-size 14px

th
  font-weight 500

.has-slug
  border-radius bottom 0
  position relative
  z-index 5

.input-slug
  background-color #fcfcfc
  font-family Menlo, 'Courier New', monospace
  margin-top -2px
  border-radius top 0, bottom 6px
  color rgba(darken($primary, 40), .4)
  position relative
  z-index 2

  &:focus
    color darken($primary, 20)
    z-index 10
