@import 'nib'

// Most basic variables are in LESS at bootstrap.less

h1

  .bkts-icon
    display block
    position relative
    // top .1em
    vertical-align middle

  a
    color #999

    &:hover
      text-decoration none

strong
  font-weight 500

body
  display table
  width 100%
  display flex
  min-height 100vh
  flex-direction column
  
.version-badge
  font-size 12px
  border-radius 3px
  border 2px solid #ccc
  padding .15em .4em
  margin-bottom 0 0 .4em
  color #999
  vertical-align top
  font-weight 500
  display inline-block
  font-family 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif;

h4
  font-size 12px
  text-transform uppercase
  color #999
  font-weight 500
  letter-spacing 1px
  font-family 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif;

#bkts-content
  flex 1

#bkts-ftr
  margin 100px 0 20px
  color #888
  text-align right

  hr
    margin-right 0

  .icon
    font-size 1.2em
    vertical-align middle

.usernav
  text-size 12px
  margin 12px 0

  .pull-left
    vertical-align middle
  .avatar
    transform scale(.7)

.nav-primary
  li.divider
    border-bottom 1px solid lighten(#87cdc2, 25)

.avatar
  vertical-align middle
  width 30px
  height 30px
  background-size cover
  border-radius 20px
  display inline-block

#bkts-hdr
  color #555
  padding 5px 0

.form-control:focus
  box-shadow none !important

.btn .icon
  font-size 24px
  vertical-align middle
  line-height .95em

nav
  .nav > li > a
    padding-left 40px
  .icon
    position absolute
    left 8px
    top 8px
    font-size 24px
    vertical-align middle
    margin-right 4px
    color #888

hr.tiny
  width 5%
  margin 8px auto
  border-bottom 1px solid #eee

textarea.code
  font-family Menlo, 'Courier New', monospace

