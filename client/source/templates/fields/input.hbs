{{#is fieldType 'textarea'}}
  {{textarea slug value label=name help=instructions required=required}}
{{/is}}
{{#is fieldType 'color'}}
  <label>
    <input type="color" name="{{slug}}" value="{{value}}"> {{name}}
  </label>
{{/is}}
{{#is fieldType 'checkbox'}}
  {{checkbox slug value label=name}}
{{/is}}
{{#is fieldType 'text'}}
  {{input slug value label=name type=fieldType help=instructions required=required}}
{{/is}}
{{#is fieldType 'number'}}
  {{input slug value label=name type=fieldType help=instructions required=required}}
{{/is}}
