<form class="container-fluid" action="/{{adminSegment}}/login" method="POST">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <header id="bkts-hdr">
        {{logo}}
      </header>

      {{#if next}}
        {{hidden 'next' next}}
      {{/if}}

      <fieldset>

      <h3>Please log in{{#if next}} to continue{{/if}}:</h3>
      {{input 'username' '' placeholder="Email" type='email' size='lg'}}
      {{input 'password' '' placeholder="Password" type='password' size='lg'}}

      {{submit 'Log in' className='btn btn-lg btn-block btn-primary ladda-button'}}
      </fieldset>

    </div>
  </div>

</form>
