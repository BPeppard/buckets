<form>
  <input type="hidden" name="author" value="{{user._id}}">
  <input type="hidden" name="bucket" value="{{bucket._id}}">
  
  {{#if _id}}
    <a href="#delete" class="btn btn-link pull-right">{{icon 'trash'}}</a>
    <h1>Edit {{title}}</h1>
  {{else}}
    <h1>New {{bucket.singular}}</h1>
  {{/if}}

  <div class="row">
    <div class="col-md-8">
      {{input 'text' 'title' placeholder="Title" value=title}}
      <div class="alert alert-warning">TBD: Custom fields</div>

      <div class="pull-right">
        <div class="btn-group">
          {{submit text="Publish"}}
          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
            <ul class="dropdown-menu">
               <li><a href="#draft">Save as a draft</a></li>
               <li><a href="#date">Publish onâ€¦</a></li>
             </ul>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="col-md-4">
      <h4>Publish</h4>
      {{input 'text' 'publishDate' placeholder="Next tuesday" value=publishDate}}
      <h4>Meta</h4>
      {{input 'text' 'Keywords' placeholder="Keywords" label="Keywords" value=keywords}}
      <div class="form-group">
        <textarea name="description" class="form-control" placeholder="Description">{{description}}</textarea>
      </div>
      
      <input type="hidden" name="author" value="{{user._id}}">
    </div>
  </div>
</form>