<div class="row">
  <h1 class="page-title background-{{bucket.color}}">
    {{bucket.name}}
    {{#hasRole 'administrator'}}
      <a href="/{{adminSegment}}/buckets/{{bucket.slug}}/settings" class="btn btn-link btn-icon">{{icon 'setting-gear'}}</a>
    {{/hasRole}}

    <span class="hasEntries {{#empty items}}hidden{{/empty}}">
      <a class="btn btn-link btn-icon show-tooltip" title="Add {{bucket.singular}}" href="/{{adminSegment}}/buckets/{{bucket.slug}}/add">{{icon 'add'}}</a>
    </span>
  </h1>
  <div class="col-md-5 col-sm-4 sidebar">
    <br>
    <div class="entries"></div>
  </div>
  <div class="col-md-7 col-sm-8 entry-detail">

  </div>
</div>
