<form>
  <h1>Templates</h1>
  <div class="row">
    <div class="col-md-3">
      <a href="#new" class="btn btn-default btn-block">New Template</a>
      <br>
      <ul class="nav nav-stacked nav-pills">
      {{#each items}}
        <li{{#is filename ../filename}} class="active"{{/is}}>
          <a href="/{{adminSegment}}/templates/{{filename}}">{{filename}}</a>
        </li>
      {{/each}}
      </ul>

      <hr>
      <div class="notForIndex">
        {{input 'text' 'filename' attrs='placeholder="Filename"' value=filename}}
      </div>
      <div class="pull-right">
        <span class="notForIndex">
          <a href="#delete" class="btn btn-link">{{icon 'trash'}}</a>
        </span>
        {{submit text='Save'}}
      </div>
      <div class="clearfix"></div>

    </div>
    <div class="col-md-9">
      <textarea name="contents" rows="20" class="form-control code hidden">{{contents}}</textarea>
      <pre class="code editor"></pre>
    </div>
  </div>
</form>
