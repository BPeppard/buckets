<header>
  <h1><a href="/">Buckets Alpha</a></h1>
</header>

<div id="content">
  {{#entries bucket="articles" slug=req.params.slug}}
    <h3>
      <a href="/{{slug}}">{{title}}</a>
      {{#if author}}
        <em>by <strong>{{author.name}}</strong></em>
      {{/if}}
    </h3>
    {{description}}
    {{markdown body}}
    <em>Published on {{formatTime publishDate format="MMMM Do YYYY, h:mm:ss a"}}</em>
    {{!-- {{inspect .}} --}}
  {{else}}
    <p>Add some entries into any Bucket and they’ll show up here :)</p>
  {{/entries}}

  {{!-- Show meetups if we’re on the homepage --}}
  {{#is req.path '/'}}
    <div class="sidebar">
      <h4>Meetups</h4>

      <ul>
        {{#entries bucket="meetups" slug=req.params.slug}}
          <li><a href="/meetups/{{slug}}">{{map location}}</a></li>
        {{else}}
          <li>No meetups found.</li>
        {{/entries}}
      </ul>
    </div>
  {{/is}}
</div>
